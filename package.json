{
  "name": "tinyspy",
  "version": "0.0.0",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "prepare": "husky install",
    "test": "vitest"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aslemammad/tinyspy.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aslemammad/tinyspy/issues"
  },
  "homepage": "https://github.com/aslemammad/tinyspy#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@size-limit/time": "^7.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "size-limit": "^7.0.4",
    "tsup": "^5.11.1",
    "typescript": "^4.5.3",
    "vite": "^2.7.1",
    "vitest": "^0.0.76"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "import": "{ spy, spyOn, restoreAll }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/index.mjs",
      "import": "{ spy, spyOn, restoreAll }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/spy.js",
      "import": "{ spy }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/spy.mjs",
      "import": "{ spy }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/spyOn.js",
      "import": "{ spyOn }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/spyOn.mjs",
      "import": "{ spyOn }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/restoreAll.js",
      "import": "{ restoreAll }",
      "limit": "4500 ms"
    },
    {
      "path": "dist/restoreAll.mjs",
      "import": "{ restoreAll }",
      "limit": "4500 ms"
    }
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write"
    ]
  }
}
